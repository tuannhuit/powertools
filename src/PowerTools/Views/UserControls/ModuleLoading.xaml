<UserControl x:Class="PowerTools.Views.UserControls.ModuleLoading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="{Binding LoadingText1}" Foreground="LightGray" FontStyle="Italic" Style="{StaticResource TextBlock.Title}" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding LoadingText2}" Foreground="LightGray" FontStyle="Italic" FontSize="14" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
