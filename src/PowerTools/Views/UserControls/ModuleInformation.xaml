<UserControl x:Class="PowerTools.Views.UserControls.ModuleInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PowerTools.Views.UserControls">
    <StackPanel>
        <TextBlock Style="{StaticResource TextBlock.Content}" Text="Module Information" FontWeight="SemiBold" Margin="0"/>
        <TextBlock Style="{StaticResource TextBlock.Title}" Text="{Binding Path=SelectedModule.Name}" FontWeight="SemiBold" Margin="0 10"/>
        <local:VersionInstaller Margin="0 10"/>
        <TextBlock Style="{StaticResource TextBlock.Content}" Text="Description" FontWeight="SemiBold" Margin="0 10"/>
    </StackPanel>
</UserControl>
